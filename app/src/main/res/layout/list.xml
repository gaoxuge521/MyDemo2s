	android:textSize="20dp"
	android:textColor="@android:color/white"/>
    </LinearLayout>
   
<ListView
	android:id="@+id/listview"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fastScrollEnabled="true"
/>
</LinearLayout>
